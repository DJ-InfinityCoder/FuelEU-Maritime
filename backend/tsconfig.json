{
    "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "outDir": "./dist",        
      "paths": {
        "*": ["src/*"]
      },
      "types": ["node", "@vercel/node"]  
    },
    "include": ["src/**/*.ts", "api/**/*.ts"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }
  